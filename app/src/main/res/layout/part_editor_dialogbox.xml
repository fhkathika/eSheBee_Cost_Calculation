                        android:id="@+id/layeredittext"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/layer_increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:textSize="40sp"
                        android:text=" + "/>
                </LinearLayout>
<LinearLayout
